<!doctype html>
<html lang="en">
  <%- include('partials/header.ejs') %>

    <body>
        <main>
        <%- include('partials/navbar.ejs') %>
      
            <div class="px-5 py-5 my-5">
            <% if(paymentService != null){ %>
                <h2 class="pb-2 border-bottom">Payment Service</h2>
                <table class="table">
                    <thead>
                      <tr>
                        <th colspan="1"></th>
                        <th colspan="3">Payment Token</th>
                        <th colspan="4">Reward Token</th>
                      </tr>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Symbol</th>
                        <th scope="col">Address</th>

                        <th scope="col">Name</th>
                        <th scope="col">Symbol</th>
                        <th scope="col">Address</th>
                        <th scope="col">Reward Multiplier</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row">1</th>
                        <td><%= paymentService.paymentTokenName%></td>
                        <td><%= paymentService.paymentTokenSymbol%></td>
                        <td><%= paymentService.paymentTokenAddress%></td>

                        <td><%= rewardToken.name%></td>
                        <td><%= rewardToken.symbol%></td>
                        <td><%= rewardToken.address%></td>

                        <td><%= paymentService.rewardMultiplier%></td>
                      </tr>
                    </tbody>
                  </table>
            <% } else { %>
                <h2 class="pb-2 border-bottom">Create Payment Service</h2>
                <form action="/createPaymentService" method="post">
                    <div class="mb-3">
                        <label for="inputPaymentTokenName" class="form-label">Payment Token Name</label>
                        <input name="paymentTokenName" type="text" class="form-control" value="USD Coin" id="inputPaymentTokenName">
                    </div>
                    <div class="mb-3">
                        <label for="inputPaymentTokenSymbol" class="form-label">Payment Token Symbol</label>
                        <input name="paymentTokenSymbol" type="text" class="form-control" value="USDC" id="inputPaymentTokenSymbol">
                    </div>
                    <div class="mb-3">
                        <label for="inputPaymentTokenAddress" class="form-label">Payment Token Address</label>
                        <input name="paymentTokenAddress" type="text" class="form-control" value="0x3c499c542cef5e3811e1192ce70d8cc03d5c3359" id="inputPaymentTokenAddress">
                    </div>
                    <div class="mb-3">
                        <label for="inputRewardMultiplier" class="form-label">RewardMultiplier</label>
                        <input name="rewardMultiplier" type="number" class="form-control" value="2" id="inputTokenSymbol">
                    </div>
                    <button type="submit" class="btn btn-primary">Create Payment Service</button>
                </form>
            <% } %>   
            </div>

        </main>

    <%- include('partials/footer.ejs') %>
    </body>
</html>